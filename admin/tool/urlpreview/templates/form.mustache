{{!
    @template tool_urlpreview/form
    This is the template that is rendered for the url Metadata Preview form
    
    Example context (json):
    {
        "action" : "index.php", 
        "submittedUrl" : "https://moodle.org/"
    }
}}
<form action="{{action}}" method="get" class="simplesearchform mb-3">
    <div class="input-group">
        <label for="url" class="sr-only">{{#str}}url, tool_urlpreview{{/str}}</label>
        <input id="url" type="text" name="url" class="form-control form-control-sm" placeholder="{{#str}}url, tool_urlpreview{{/str}}" required value="{{submittedUrl}}">
        <div class="input-group-append">
            <input type="submit" class="btn btn-sm btn-primary" value="{{#str}}preview, tool_urlpreview{{/str}}">
        </div>
    </div>
    <div id="previewField">
    </div>
</form>
