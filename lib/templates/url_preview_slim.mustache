{{!
    @template core/url_preview_slim
    Template for url preview element

    Example context (json):
    {
        "image": "https://moodle.org/logo/moodle-logo.svg",
        "title": "Title example",
        "description": "Description example",
        "sitename": "Name example",
        "canonicalurl": "https://moodle.org/"
    }
}}

<div style="padding: 0px;">
    <div class="border shadow-sm rounded">
        <div class="row no-gutters position-relative">
            <div class="col-md-2">
                {{#image}}
                    <img
                        class="rounded-left"
                        src="{{{.}}}"
                        alt="Preview image"
                        style="border-radius: 0; width: 7em; height: 4.5em; object-fit: cover;">
                {{/image}}
            </div>
            <div class="col-md-10 position-static">
                <div class="py-2 px-0">
                    {{#title}}
                    <div class="text-truncate my-0 pr-2">
                        <b class="text-truncate my-0"><a href="{{{canonicalurl}}}" target="_blank" class="card-title stretched-link">{{.}}</a></b>
                    </div>
                    {{/title}}
                    <div class="text-truncate my-0 pr-2">
                        {{#description}}
                            {{#sitename}}<small class="card-text text-muted text-uppercase">{{.}}ï½œ</small>{{/sitename}}{{.}}
                        {{/description}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
